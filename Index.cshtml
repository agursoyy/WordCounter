@{
    Layout = null;
    var words = ViewData["words"] as Word[];
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width = device-width" />
    <title>Index</title>
</head>

<body>
  
    <table class="table">
        <tr>
            <th style="margin-right:5%">WORD</th>
            <th>COUNT</th>
        </tr>

        @for (int i = 0; i < words.Length; i++)
        {
            <tr>
                <td >
                    @words[i].getWordName()
                </td>

                <td>
                    @words[i].getCount()
                </td>

            </tr>
        }

    </table>
</body>
</html>